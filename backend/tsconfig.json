{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "baseUrl": "./",

    "paths": {
      "express": ["/src/@types/express/*"]
    }
  },
  "include": ["src"],
  "files": ["./src/@types/express/index.d.ts"]
}
